<div class="row">
  <div class="col-12">
    <div class="px-3 py-4 mb-3 rounded d-flex flex-row justify-content-center align-items-center navbar-detached bg-navbar-theme" id="layout-navbar">
      <h3 class="m-0">Add New Blog</h3>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body demo-vertical-spacing demo-only-element">
        <form action="/admin/blog-add" method="post">

          <div class="mb-3">
            <label for="defaultFormControlInput" class="form-label">Tags</label>
            <input id="tagsInput" class="form-control" name="tags" />
          </div>
          <div class="mb-3">
            <label for="defaultFormControlInput" class="form-label">Title</label>
            <input type="text" class="form-control" id="defaultFormControlInput " name="title" />
          </div>
          <div class="mb-3">
            <label for="defaultFormControlInput" class="form-label">Description</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" name="desc" rows="3"></textarea>
          </div>

          <div class="mx-2">
            <div class="mb-4 d-flex justify-content-center">
              <img id="mainImg" src="https://mdbootstrap.com/img/Photos/Others/placeholder.jpg" alt="example placeholder" style="width: 300px" />
            </div>
            <div class="d-flex justify-content-center">
              <div class="btn btn-primary btn-rounded">
                <label role="button" class="form-label text-white m-1" for="customFile4">Choose file</label>
                <input type="file" class="form-control d-none" id="customFile4" onchange="displaySelectedImage(this, 'mainImg')" />
                <input type="hidden" id="mainImg0" name="mainImg" />
              </div>
            </div>
          </div>
          <div class="mb-3">
            <label for="defaultFormControlInput" class="form-label">Text-1</label>
            <textarea class="summernote" name="content"></textarea>
          </div>

          <div class="text-center">
            <button class="btn btn-primary mb-3">Add</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>