<div class="row">
  <div class="col-12">
    <div
      class="px-3 py-4 mb-3 rounded d-flex flex-row justify-content-center align-items-center navbar-detached bg-navbar-theme"
      id="layout-navbar"
    >
      <h3 class="m-0">Footer Area</h3>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body demo-vertical-spacing demo-only-element">
        <form action="/admin/footer-update" method="post">
          <div class="mb-3">
            <label for="defaultFormControlInput" class="form-label"
              >Title</label
            >
            <input
              type="text"
              class="form-control"
              id="defaultFormControlInput "
              name="title"
              value="<%- result.title %>"
            />
          </div>
          <div class="mb-3">
            <label for="defaultFormControlInput" class="form-label"
              >Instagram Url</label
            >
            <input
              type="text"
              class="form-control"
              id="defaultFormControlInput "
              name="instagramUrl"
              value="<%- result.instagramUrl %>"
            />
          </div>
          <div class="mb-3">
            <label for="defaultFormControlInput" class="form-label"
              >Twitter Url</label
            >
            <input
              type="text"
              class="form-control"
              id="defaultFormControlInput "
              name="TwitterUrl"
              value="<%- result.TwitterUrl %>"
            />
          </div>
          <div class="mb-3">
            <label for="defaultFormControlInput" class="form-label"
              >Linkedin Url</label
            >
            <input
              type="text"
              class="form-control"
              id="defaultFormControlInput "
              name="linkedinUrl"
              value="<%- result.linkedinUrl %>"
            />
          </div>
          <input type="hidden" name="id" value="<%- result.id %>">
          <div class="mb-3">
            <label for="defaultFormControlInput" class="form-label">Mail</label>
            <input
              type="text"
              class="form-control"
              id="defaultFormControlInput "
              name="mail"
              value="<%- result.mail %>"
            />
          </div>
          <div class="text-center">
            <button class="btn btn-success mb-3">Update</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
